void SFinput::get(&String_16 value)
{
    value.clear();

    inline_cpp[[
      std::string vals = fi->value();
      char sp;
      value.ensureCapacity(&sp,vals.length());      
      for(int i=0; i < vals.length();i++) value.append(&sp,vals.at(i));
    ]]
}

