void SFbox::SetLabel(&String_16 str)
{
   label = new char[str.length()+1];
   for(var int i=0; i < str.length(); i++){ label[i] = str.getAt(i);}
   label[str.length()] = '\0';

   inline_cpp[[ 
      fl_color(FL_BLACK);
      mb->label(label._theObject->_array);
   ]]
}


